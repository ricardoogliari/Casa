<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.estudos.com.casa.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="0.33"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:onClick="cozinha"
            android:id="@+id/btnCozinha"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Cozinha"/>
        <Button
            android:onClick="sala"
            android:id="@+id/btnSala"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Sala"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="0.34"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:onClick="garagem"
            android:id="@+id/btnGaragem"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Garagem"/>
        <Button
            android:onClick="dormitorio"
            android:id="@+id/btnDormitorio"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="DormitÃ³rio"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="0.33"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:onClick="ladoDeFora"
            android:id="@+id/btnLadoDeForaGaragem"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Lado de Fora / Garagem"/>
        <Button
            android:onClick="fora"
            android:id="@+id/btnLadoDeFora"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Lado de Fora"/>
    </LinearLayout>

</LinearLayout>
